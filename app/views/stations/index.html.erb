 <table id="table" class="table table-striped">
    <thead>
     <tr>
        <th>Rank</th>
        <th>Country</th>
        <th>AQI</th>
     </tr>
    </thead>
    <tbody>
      <%c =1 %>
      <% @stations_all.each do |station| %>
        <tr>
          <td><%= c %></td>
          <td><%= station.country.name %></td>
          <td><%= station.aqi %></td>
        </tr>
        <%c +=1 %>
      <% end %>
    </tbody>
  </table>
</div>
                  
                </p>

            </div>
        </div>
    </div>
<% end %>

