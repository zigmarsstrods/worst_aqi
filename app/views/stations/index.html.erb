<% content_for :content do %>
<div class="jumbotron text-center">
        <h1>Latest country Air Quality information<h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-16">
            <br>
            <br>
            <%= javascript_pack_tag "drop_down" %>
<div class="demo">
<table><tbody><tr><td>
<form action="#">
<fieldset>
    <label for="country">Check the current situation in:</label>
    <select name="country" id="country">
      <%= options_for_select(Country.where(id: Station.pluck(:country_id)).all.collect{ |c| [c.name, c.id] }) %>
    </select>
</fieldset>
</form>
</td>
<td>
<p class='extra_padding' id='aqi_result' ></p></td>
</tr></tbody></table>
</div>
